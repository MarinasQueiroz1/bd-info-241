import sqlite3

# Conectar ao banco de dados
conn = sqlite3.connect('banco.db')
cursor = conn.cursor()

# Ler a tabela Matricula
cursor.execute('SELECT * FROM TB_MATRICULA')

# Listar o status de aprovaÃ§Ã£o dos alunos matriculados
for row in cursor.fetchall():
    id_matricula, id_aluno, id_disciplina, id_professor, n1, n2, faltas = row
    media = (2*n1) + (3*n2) / 5
    if media >= 6 and faltas <= 20:
        status = 'Aprovado'
    else:
        status = 'Reprovado'
    print(f'ID Matricula: {id_matricula}, Aluno: {id_aluno}, Disciplina: {id_disciplina}, Professor: {id_professor}, N1: {n1}, N2: {n2}, Faltas: {faltas}, Status: {status}')

# Fechar a conexÃ£o
conn.close()
