CREATE TABLE TB_ALUNO(
    aluno_id INT PRIMARY KEY,
    nome VARCHAR(100),
    data_nascimento DATE
);

CREATE TABLE TB_PROFESSOR(
    professor_id INT PRIMARY KEY,
    nome VARCHAR(100),
    titulacao VARCHAR(100)
);

CREATE TABLE TB_DISCIPLINA(
    disciplina_id INT PRIMARY KEY,
    nome VARCHAR(100),
    carga_horaria INT
);

CREATE TABLE TB_MATRICULA (
    matricula_id INT PRIMARY KEY,
    aluno_id INT,
    professor_id INT,
    disciplina_id INT,
    n1 FLOAT,
    n2 FLOAT,
    faltas INT,
    FOREIGN KEY (professor_id)
REFERENCES TB_PROFESSOR(professor_id),
    FOREIGN KEY (disciplina_id)
REFERENCES TB_DISCIPLINA (disciplina_id)        
);

INSERT INTO TB_ALUNO(nome, data_nascimento) VALUES ('Marina Queiroz', '200-1-15');
SELECT * FROM TB_ALUNO;

UPDATE TB_ALUNO SET nome = 'João Pedro Queiroz' WHERE aluno_id = 1;

DELETE  FROM TB_ALUNO WHERE aluno_id = 1;

